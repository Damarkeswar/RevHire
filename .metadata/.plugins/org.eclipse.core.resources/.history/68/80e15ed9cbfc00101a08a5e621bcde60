package com.revhire.dao;

import java.sql.*;

import com.revhire.config.DBConnection;

public class EmployerDaoImpl implements EmployerDao {

    @Override
    public int createEmployer(int userId) {

        String sql = "INSERT INTO employers (user_id)
            VALUES (?)
        """;

        try (Connection con = DBConnection.getConnection();
             PreparedStatement ps =
               con.prepareStatement(sql, new String[]{"employer_id"})) {

            ps.setInt(1, userId);
            ps.executeUpdate();

            ResultSet rs = ps.getGeneratedKeys();
            if (rs.next()) {
                return rs.getInt(1); // employer_id
            }

        } catch (Exception e) {
            e.printStackTrace();
        }
        return 0;
    }
}
