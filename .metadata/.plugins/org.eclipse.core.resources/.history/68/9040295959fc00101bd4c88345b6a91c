package com.revhire.ui;

public class ResumeViewMenu {

    public static void show(int resumeId) {

        System.out.println("\n=== Resume Details ===");
        System.out.println("Resume ID: " + resumeId);

        // Later we will fetch from DB
        System.out.println("Objective: [Stored objective]");
        System.out.println("Education: [Stored education]");
        System.out.println("Experience: [Stored experience]");
        System.out.println("Skills: [Stored skills]");
        System.out.println("Projects: [Stored projects]");
    }
}
