package com.revhire.ui;

import java.util.Scanner;

public class EmployerDashboard {

    public static void show(int companyId) {

        Scanner sc = new Scanner(System.in);

        while (true) {
            System.out.println("\n=== Employer Dashboard ===");
            System.out.println("1. Manage Company Profile");
            System.out.println("2. Create Job Posting");
            System.out.println("3. Manage Job Postings");
            System.out.println("4. View Applicants");
            System.out.println("5. Shortlist / Reject Applications");
            System.out.println("6. Search Applicants");
            System.out.println("7. View Notifications");
            System.out.println("8. Logout");

            int choice = sc.nextInt();

            switch (choice) {
                case 1 : CompanyProfileMenu.show(companyId);
                case 2 : JobPostMenu.create(companyId);
                case 3 : JobManageMenu.show(companyId);
                case 4 : ApplicantMenu.view(companyId);
                case 5 : ApplicantMenu.updateStatus(companyId);
                case 6 : ApplicantSearchMenu.show(companyId);
                case 7 : NotificationMenu.showEmployer(companyId);
                case 8 -> {
                    System.out.println("ğŸ‘‹ Logged out");
                    return;
                }
            }
        }
    }
}
