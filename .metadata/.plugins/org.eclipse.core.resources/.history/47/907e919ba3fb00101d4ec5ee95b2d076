package com.revhire.ui;

import java.util.Scanner;

public class EmployerDashboard {

    public static void show(int companyId) {

        Scanner sc = new Scanner(System.in);

        while (true) {
            System.out.println("\n=== Employer Dashboard ===");
            System.out.println("1. Manage Jobs");
            System.out.println("2. Logout");

            int choice = sc.nextInt();

            switch (choice) {
                case 1:
                    JobMenu.showMenu(companyId);
                    break;

                case 2:
                    System.out.println("ðŸ‘‹ Logged out");
                    return;
            }
        }
    }
}
