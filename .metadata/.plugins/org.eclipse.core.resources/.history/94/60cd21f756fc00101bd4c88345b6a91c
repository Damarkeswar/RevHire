package com.revhire.dao;

import java.sql.Connection;
import java.sql.PreparedStatement;

import com.revhire.config.DBConnection;

public class CertificationDaoImpl implements CertificationDao {

    @Override
    public boolean addCertification(int jobSeekerId,
                                    String certName,
                                    String issuedBy,
                                    int year) {

        String sql = "INSERT INTO certifications
            (job_seeker_id, certification_name, issued_by, issued_year)
            VALUES (?, ?, ?, ?)
        """;

        try (Connection con = DBConnection.getConnection();
             PreparedStatement ps = con.prepareStatement(sql)) {

            ps.setInt(1, jobSeekerId);
            ps.setString(2, certName);
            ps.setString(3, issuedBy);
            ps.setInt(4, year);

            return ps.executeUpdate() > 0;

        } catch (Exception e) {
            e.printStackTrace();
        }
        return false;
    }
}
