package com.revhire.dao;

import java.sql.*;
import java.util.ArrayList;
import java.util.List;

import com.revhire.config.DBConnection;

public class ResumeViewDaoImpl implements ResumeViewDao {

    @Override
    public String getObjective(int resumeId) {

        String sql = "SELECT objective FROM resumes WHERE resume_id = ?";

        try (Connection con = DBConnection.getConnection();
             PreparedStatement ps = con.prepareStatement(sql)) {

            ps.setInt(1, resumeId);
            ResultSet rs = ps.executeQuery();

            if (rs.next())
                return rs.getString("objective");

        } catch (Exception e) {
            e.printStackTrace();
        }
        return "Not added";
    }

    @Override
    public List<String> getEducation(int resumeId) {

        List<String> list = new ArrayList<>();

        String sql = """
            SELECT degree, institution, start_year, end_year
            FROM education e
            JOIN resumes r ON e.job_seeker_id = r.job_seeker_id
            WHERE r.resume_id = ?
        """;

        try (Connection con = DBConnection.getConnection();
             PreparedStatement ps = con.prepareStatement(sql)) {

            ps.setInt(1, resumeId);
            ResultSet rs = ps.executeQuery();

            while (rs.next()) {
                list.add(
                    rs.getString("degree") + " | " +
                    rs.getString("institution") + " (" +
                    rs.getInt("start_year") + "-" +
                    rs.getInt("end_year") + ")"
                );
            }

        } catch (Exception e) {
            e.printStackTrace();
        }
        return list;
    }

    @Override
    public List<String> getExperience(int resumeId) {

        List<String> list = new ArrayList<>();

        String sql = """
            SELECT company_name, role
            FROM experience e
            JOIN resumes r ON e.job_seeker_id = r.job_seeker_id
            WHERE r.resume_id = ?
        """;

        try (Connection con = DBConnection.getConnection();
             PreparedStatement ps = con.prepareStatement(sql)) {

            ps.setInt(1, resumeId);
            ResultSet rs = ps.executeQuery();

            while (rs.next()) {
                list.add(
                    rs.getString("company_name") +
                    " - " + rs.getString("role")
                );
            }

        } catch (Exception e) {
            e.printStackTrace();
        }
        return list;
    }

    @Override
    public List<String> getSkills(int resumeId) {

        List<String> list = new ArrayList<>();

        String sql = """
            SELECT skill_name, proficiency_level
            FROM skills s
            JOIN resumes r ON s.job_seeker_id = r.job_seeker_id
            WHERE r.resume_id = ?
        """;

        try (Connection con = DBConnection.getConnection();
             PreparedStatement ps = con.prepareStatement(sql)) {

            ps.setInt(1, resumeId);
            ResultSet rs = ps.executeQuery();

            while (rs.next()) {
                list.add(
                    rs.getString("skill_name") +
                    " (" + rs.getString("proficiency_level") + ")"
                );
            }

        } catch (Exception e) {
            e.printStackTrace();
        }
        return list;
    }

    @Override
    public List<String> getProjects(int resumeId) {

        List<String> list = new ArrayList<>();

        String sql = """
            SELECT project_title, description
            FROM projects
            WHERE resume_id = ?
        """;

        try (Connection con = DBConnection.getConnection();
             PreparedStatement ps = con.prepareStatement(sql)) {

            ps.setInt(1, resumeId);
            ResultSet rs = ps.executeQuery();

            while (rs.next()) {
                list.add(
                    rs.getString("project_title") +
                    " - " + rs.getString("description")
                );
            }

        } catch (Exception e) {
            e.printStackTrace();
        }
        return list;
    }
}
